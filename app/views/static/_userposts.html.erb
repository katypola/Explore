<div id="userPostDiv">
<h2>Posts</h2>
	<% if user_signed_in? && current_user == @user %>
		<% if (@user.posts.nil? || @user.posts == []) %>
			<h4>Add some posts to your profile!</h4>
			<a class="newPostsLink" href="/<%= @user.username %>/new"><h3>New Post</h3></a>
		<% else %>
			<a class="newPostsLink" href="/<%= @user.username %>/new"><h3>New Post</h3></a>
			<% @user.posts.each do |post| %>
				<div class="postPreview">
					<a href="/posts/<%= post.id %>">
						<%= image_tag post.image %><br />
						<%= post.title %></a><br />
					<a class="editPostsLink" href="/<%= @user.username %>/edit/<%= post.id %>">Edit</a> | 
					<%= link_to 'Delete', post, method: :delete, remote: true, data: { confirm: 'Are you sure?' } %>
				</div>
			<% end %>
		<% end %>
	<% elsif @user.posts.nil? || @user.posts == [] %>
		<h4>This user doesn't have any posts yet.</h4>
	<% else %>
		<% @user.posts.each do |post| %>
			<div class="postPreview">
				<a href="/posts/<%= post.id %>">
					<%= image_tag post.image %><br />
					<%= post.title %></a>
			</div>
		<% end %>
	<% end %>
</div>